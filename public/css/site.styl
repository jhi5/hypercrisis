@font-face
  font-family 'Adventure'
  src url("../fonts/Adventure.otf")

@font-face
  font-family 'Okuda'
  src url("../fonts/Okuda.otf")

@font-face
  font-family 'Okuda Bold'
  src url("../fonts/Okuda Bold.otf")

body
  font-family 'Adventure'
  padding-top 61px

.navbar-default .navbar-nav > .active > a, .navbar-default .navbar-nav > .active >   
 a:hover, .navbar-default .navbar-nav > .active > a:focus
  color white
  background-color #3399ff

.navbar-header
  a
    &.navbar-brand
      margin-top -15px
      margin-bottom -20px
      h6
        color #09f

.navbar-right
  margin-top 10px

.navbar
  font-size 1.5rem
  button
    margin-left 3px
    margin-right 3px

footer
  padding-left 15px
  padding-right 15px
  p
    border-top 1px solid #d7e0e2

.jumbotron
  background-image url("../jumbo.png")
  background-size cover
  height 100vh
  background-repeat none
  button
    padding 2rem
    background-color rgba(0,0,0,0)
    color #fff
    font-size 2.5rem
    font-family "Adventure", Helvetica, Arial, sans-serif
    box-shadow inset 0.5em 0.5em #f00
    box-shadow inset 0.4em 0.4em #fff
    text-shadow 0.2rem 0.2rem 0.2rem #000
    &:hover
      box-shadow inset 0.5em 0.5em #e06262
      box-shadow inset 0.4em 0.4em #e06262
      color #fff
      text-shadow #808080

#jumbotitle
  color #fff
  font-size 1.1
  font-family "Adventure", Helvetica, Arial, sans-serif
  text-shadow 1rem 1rem 1rem #000

#jumboslug
  color #fff
  font-size 3rem
  font-family "Adventure", Helvetica, Arial, sans-serif
  text-shadow 0.2rem 0.2rem 0.2rem #000


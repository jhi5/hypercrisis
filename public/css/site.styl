@font-face
    font-family 'okudaregular'
    src url('okuda-webfont.woff2') format('woff2'),
         url('okuda-webfont.woff') format('woff')
    font-weight normal
    font-style normal

deadeyecolor = rgba(51, 51, 102, .85)
gravitygirlcolor = rgba(153, 102, 153, .85)
knoxcolor = rgba(102, 51, 51, .85)
obscuritycolor = rgba(204, 153, 204, .85)
querycolor = rgba(51, 102, 51, .85)
robonobocolor = rgba(102, 102, 102, .85)
crosscolor = rgba(204,153,51,.85)

body
    padding-top 70px

.mainButton
	padding-top 3rem
	padding-bottom 3rem
	font-size 7rem

.modal-admin
	background-color white

.charselect
	height 30rem
	width 30rem
	margin-right 1.25rem
	margin-bottom 1rem
	border 2.0rem outset rgba(193, 66, 66, 0.1)
	border-radius .25rem

.ggcharselect:hover
	border 3.0rem outset gravitygirlcolor

.rbcharselect:hover
	border 3.0rem outset robonobocolor

.kxcharselect:hover
	border 3.0rem outset knoxcolor

.qucharselect:hover
	border 3.0rem outset querycolor

.obcharselect:hover
	border 3.0rem outset obscuritycolor

.decharselect:hover
	border 3.0rem outset deadeyecolor

.crosscharselect:hover
	border 3.0rem outset crosscolor


characterselectbackground = rgba(255,255,51,0.45)

#characterselecttitle	
	width 100%
	font-size 15rem
	color white
	text-shadow 1px 1px 0 #CCC, 2px 2px 0 #CCC, 3px 3px 0 #444, 4px 4px 0 #444, 5px 5px 0 #444, 6px 6px 0 #444

.characterselectbasic
	background linear-gradient(0deg,characterselectbackground,characterselectbackground),url(../images/jumbotron.png)

.characterselectde
	background linear-gradient(0deg,deadeyecolor,deadeyecolor),url(../images/jumbotron.png)

.characterselectgg
	background linear-gradient(0deg,gravitygirlcolor,gravitygirlcolor),url(../images/jumbotron.png)

.characterselectkx
	background linear-gradient(0deg,knoxcolor,knoxcolor),url(../images/jumbotron.png)

.characterselectob
	background linear-gradient(0deg,obscuritycolor,obscuritycolor),url(../images/jumbotron.png)

.characterselectqu
	background linear-gradient(0deg,querycolor,querycolor),url(../images/jumbotron.png)

.characterselectrb
	background linear-gradient(0deg,robonobocolor,robonobocolor),url(../images/jumbotron.png)

.characterselectcross
	background linear-gradient(0deg,crosscolor,crosscolor),url(../images/jumbotron.png)

.okuda
	font-family 'okuda'

.big
	font-size 7rem

.jumbotron
  background-image url("../images/jumbotron.png")
  background-color green
  background-size cover
  height 35vh
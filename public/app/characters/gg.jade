.container-fluid.ggbackground
	.container.top-padding-med
		.row
			.col-md-6.text-center.ggcharprofileleft
				div
					div.gg-profilebg
						img.charpageheadshot.img-responsive(src="../../images/gravitygirlcharselect.png")
					h1#charname.ggcharpagename.okuda Gravity Girl
				h2.ggcharpageheading DIFFICULTY
						div.charpage-skill
							img.charpage-difficulty(src="../../images/easy.png")			
			.col-md-6.charbio.text-center.ggcharprofileright
				h2.ggcharpageheading POWERS
					div.charpage-skill
						h3.charprofiletext Gravity Manipulation, Time Manipulation, Teleportation Portals	
				h2.ggcharpageheading STRATEGY
					div.charpage-skill
						h3.charprofiletext
							button.plus + Combo Friendly
							button.plus + Versatile
							button.minus - Card Draw
							button.minus - Discard
				h2.ggcharpageheading SKILL
					div.charpage-skill(data-toggle="popover" data-trigger="hover"
					data-content="To play a card with Throw, you must first destroy one of your own Utilities.")				
						img(src="../../images/throw.png")
				button.btn.btn-block.ggcharpagedownload Download Now!
			.modal.fade.top-padding-med.modal-admin#myModal(role="dialog")
				.modal-header.text-center
					button.btn.btn-modal-previous(ng-click="findPreviousEntry()" ng-hide="hidePrevious()") Previous Card
					button.btn.btn-modal-close(data-dismiss="modal" ng-click="emptyModal()") Close This Window
					button.btn.btn-modal-next(ng-click="findNextEntry()" ng-hide="hideNext()") Next Card
				.modal-body
					.col-md-6.text-center
						img(src="{{modalContent.illustrations[0]}}")
						h1.cardtitle#modaltitle {{modalContent.name}}
						h3.text-center.gg-flavortext(ng-hide="modalContent.flavor == null") {{modalContent.flavor[0]}}
					.col-md-6.text-center
						.row
							.col-md-6
								h3.gg-profileheadings.okuda Rating
								h2.text-center {{modalContent.rating}}
							.col-md-6
								h3.gg-profileheadings.okuda Type
								img.modaltypesymbol(src="{{modalContent.typeSymbol}}" alt="{{modalContent.type}}")
						.row(ng-hide="modalContent.utilityValues == null")
							.col-md-12
								h3.gg-profileheadings.okuda Utility Values
							.col-md-4
								h2.utilityvalue {{modalContent.utilityValues[0]}}
								h4.hpheading Hit Points
							.col-md-4
								h2.utilityvalue {{modalContent.utilityValues[1]}}
								h4.fightheading Fight
							.col-md-4
								h2.utilityvalue {{modalContent.utilityValues[2]}}
								h4.armorheading Armor
						.row
							.col-md-12
								h3.gg-profileheadings.okuda Card Text
								h3.text-center {{modalContent.text}}
						.row
							.col-md-12
								h3.gg-profileheadings.okuda Comment
								h3.text-center(ng-repeat='comment in modalContent.comments') {{comment}}
		br
		.row
			.col-md-12.charpage-table
				h1.text-center.ggcharpagename Gravity Girl Card Database
				table.table.table-hover.table-condensed(ng-if="loaded")
					thread
						div.gg-table.text-center
							.row
								.col-md-12
									h3.text-center.searchfilter Search Filter
							.row.text-center.tagbg
								.col-md-6.tagcol
									div.tagrow.text-center(ng-repeat="tag in tagArray")
										button.btn-primary.excluded-tag(ng-click='filterButton(tag)' ng-hide='hideTagButton(tag)') - {{tag}}
										br
								.col-md-6.tagcol
									div.tagrow.text-center(ng-repeat="tag in currentTags")
										button.btn-success.included-tag(ng-click='removeFilterButton(tag)') + {{tag}}
										&nbsp;
							.row
								.col-md-12.panelbuttonrow.text-center
									button.btn-block.resetbutton(ng-click='resetTags()') RESET TAGS
						div
							.row.crossoverbuttonrow
								.col-md-6.text-center
									.form-group.crossoverbutton(class='[ ]')
										input#fancy-checkbox-primary(type='checkbox', name='fancy-checkbox-primary', autocomplete='off', ng-model="checkBox" ng-click="logCheckbox()")
										.btn-group.checkbutton(class='[ ]')
											label.btn.btn-primary.crosscheck(for='fancy-checkbox-primary', class='[ ]')
													span X
													span  
											label.btn.btn-default.active.crosstext(for='fancy-checkbox-primary', class='[ ]')
												| Add Crossovers
								.col-md-6.text-center
									.form-group.crossoverbutton(class='[ ]')
										input#fancy-checkbox-secondary(type='checkbox', name='fancy-checkbox-secondary', autocomplete='off', ng-model="featBox" ng-click="logFeatbox()")
										.btn-group.checkbutton(class='[ ]')
											label.btn.btn-primary.crosscheck(for='fancy-checkbox-secondary', class='[ ]')
													span X
													span  
											label.btn.btn-default.active.crosstext(for='fancy-checkbox-secondary', class='[ ]')
												| Include Feats						
						tr.tablebox
							th.tablefield
								h3.text-center Name
							th.tablefield
								h3.text-center Type
							th.tablefield
								h3.text-center Text
							tbody.tablebody
								tr.tablebodyrow(ng-repeat="card in cards | filter:containsTags | orderBy: 'name'")
									td
										h2.tablecardtitle.text-center(ng-click="transferModalContent(card.name)") {{card.name}}
									td
										img.typesymbol.text-center(src='{{card.typeSymbol}}')
									td
										h3.text-center.cardtext.okuda {{card.text}}
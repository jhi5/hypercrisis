.container-fluid.ggbackground
	.container.top-padding-med
		.row.profilecard
			.col-md-6.text-center.ggcharprofileleft
				div
					div.gg-profilebg.charheadshotcol
						img.charpageheadshot.img-responsive(src="../../images/gravitygirlcharselect.png")
					.row.charnamerow
						.col-md-9
							h2#charname.ggcharpagename.okuda Gravity Girl
						.col-md-3.difficultycol
							img.charpage-difficulty(src="../../images/easy.png")
							
			.col-md-6.charbio.text-center.ggcharprofileright
				.col-md-6
						h3.ggcharpageheading POWERS
							div
								h3.powers Superstrength
								h3.powers Gravity Manipulation
								h3.powers Time Manipulation
								h3.powers Teleportation Portals
				.col-md-6					
						h3.ggcharpageheading STRATEGY
							div
								h3.plus + Combo Friendly
								h3.plus + Versatile
								h3.minus - Card Draw
								h3.minus - Discard			
				.col-md-12
					h3.ggcharpageheading.skillheading SKILL
						div(data-toggle="popover" data-trigger="hover" data-placement="auto top"
						data-content="To play a card with Throw, you must first destroy one of your own Utilities.")				
							img.skillimage(src="../../images/throw.png")				
					button.btn.btn-block.ggcharpagedownload Download
			.col-md-12
				h1.adventure.databaseheading.text-center ▼ CARD DATABASE ▼	
			.modal.fade.top-padding-med.modal-admin#myModal(role="dialog")
				.modal-header.text-center
					.row
						.col-md-6
							button.btn.btn-modal-previous(ng-click="findPreviousEntry()" ng-hide="hidePrevious()") Previous
							button.btn.btn-modal-close(data-dismiss="modal" ng-click="emptyModal()") Close Window
							button.btn.btn-modal-next(ng-click="findNextEntry()" ng-hide="hideNext()") Next
						.col-md-6
							h1.cardtitle.text-center#modaltitle {{modalContent.name}}
				.modal-body
					.col-md-6.text-center.modalimagecontainer
						img.modalcardimage.img-responsive(src="{{modalContent.illustrations[0]}}" data-toggle="popover" data-trigger="hover"
					data-content="{{modalContent.flavor[0]}}")
						.row.utilityiconrow.text-center(ng-hide="modalContent.utilityValues == null")
							.col-md-12
							.col-md-4
								h2#hpsymbol.utilityvalue.text-center {{modalContent.utilityValues[0]}} HP
							.col-md-4
								h2#fightsymbol.utilityvalue.text-center {{modalContent.utilityValues[1]}} FT					
							.col-md-4
								h2#armorsymbol.utilityvalue.text-center {{modalContent.utilityValues[2]}} AR					
					.col-md-6.text-center
						.row.modaliconrow.text-center
							.col-md-12.modalcardcells
								.col-md-6
									h4.ratingheading Rating
									img.img-responsive.modaltypesymbol(src="{{modalContent.ratingSymbol}}")
								.col-md-6
									h4.typeheading Type
									img.modaltypesymbol(src="{{modalContent.typeSymbol}}" alt="{{modalContent.type}}")						
						.row
							.col-md-12
								h3.typeheading Card Text
								h3.text-center.modalcardtext {{modalContent.text}}
						.row
							.col-md-12
								h3.typeheading Comment
								h3.text-center.modalcommenttext(ng-repeat='comment in modalContent.comments') {{comment}}
		br
		.row
			.col-md-12.charpage-table
				table.table.table-hover.table-condensed(ng-if="loaded")
					thread
						div.gg-table.text-center
							.row
								.col-md-12
									h3.text-center.searchfilter Search Filter
							.row.text-center.tagbg
								.col-md-6.tagcol
									div.tagrow.text-center(ng-repeat="tag in tagArray")
										button.btn-primary.excluded-tag(ng-click='filterButton(tag)' ng-hide='hideTagButton(tag)') - {{tag}}
										br
								.col-md-6.tagcol
									div.tagrow.text-center(ng-repeat="tag in currentTags")
										button.btn-success.included-tag(ng-click='removeFilterButton(tag)') + {{tag}}
										&nbsp;
							.row.panelbuttonrow
								.col-md-4
									button.resetbutton(ng-click='resetTags()') Reset Tags
								.col-md-4
									button#crossbutton.crossbutton(type='button' data-toggle='button' ng-model='checkBox' ng-click='logCheckBox()') Crossovers Off			
								.col-md-4
									button#featbutton.featbutton(type='button' data-toggle='button' ng-model='featBox' ng-click='logFeatBox()') Feats Off		
						tr.tablebox
							th.tablefield
								h3.text-center Name
							th.tablefield
								h3.text-center Type
							th.tablefield
								h3.text-center Text
							tbody.tablebody
								tr.tablebodyrow(ng-repeat="card in cards | filter:containsTags | orderBy: 'name'")
									td
										h2.tablecardtitle.text-center(ng-click="transferModalContent(card.name)") {{card.name}}
									td
										img.typesymbol.img-responsive.text-center(src='{{card.typeSymbol}}')
									td.text-center
										h3.cardtext.okuda {{card.text}}
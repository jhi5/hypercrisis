			.modal.fade.top-padding-med.modal-admin#myModal(role="dialog")
				.modal-header
					.row
						.col-md-10
							h1#modaltitle.de-charpagemodalcardname.text-center {{modalContent.name}}
						.col-md-1.text-center
							img.img-responsive.charpagemodaltype(src="{{modalContent.typeSymbol}}" alt="{{modalContent.type}}")
						.col-md-1
							button.btn.charpagemodalclosebutton.btn-block(data-dismiss="modal" ng-click="emptyModal()") X
				.modal-body
					.col-md-6.charpagemodalimagecontainer
						img.charpagemodalimage.img-responsive(src="{{modalContent.illustrations[0]}}" data-toggle="popover" data-trigger="click"
					data-content="Flavor Text: {{modalContent.flavor[0]}}")
						&nbsp;
						.row					
							.col-md-6
								button.btn.btn-block.charpagemodalpreviousbutton(ng-click="findPreviousEntry()" ng-hide="hidePrevious()") ◀	

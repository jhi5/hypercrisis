.container-fluid.charpagebg
	.container.top-padding-med
		.row.charpageinfocard			
			div.tab-content
				#default.tab-pane.active
					.col-md-12
						img.articlebanner(src="http://res.cloudinary.com/jhi5/image/upload/e_auto_contrast,q_54:420,r_25/v1498676135/desplash.jpg")
						.de-charname.text-center#charname.hide Deadeye
				#howtoplay.tab-pane
					.col-md-4
						div.charpageheadshotbg
							img.de-charpageheadshot.img-responsive(src="http://res.cloudinary.com/jhi5/image/upload/deheadshot.png")
							h3.text-center Sinister 
							h3.text-center Sniper
					.col-md-8
						.row
							.col-md-12.text-center
								h1 HOW TO PLAY											
						.row.charselecticonsubrow
							.col-md-3
								img#charselectplus1.charselecticonimage(src="http://res.cloudinary.com/jhi5/image/upload/c_scale,w_64/v1498840640/playerdamageicon.png")
